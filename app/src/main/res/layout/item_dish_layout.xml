<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_reactangle">


    <ImageView
        android:id="@+id/iv_dish"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:src="@drawable/default_loading_pic"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_dish"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="9dp"
            android:textSize="18sp"
            android:textColor="@color/color2a"
            android:text="DishName"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:textSize="13sp"
                android:textColor="@color/color91"
                android:text="beef"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_below="@+id/tv_dish"
                android:textColor="@color/color91"
                android:layout_marginLeft="18dp"
                android:text="beef"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="00:00"/>

        <ImageView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/temp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="200â„ƒ"/>




    </LinearLayout>



</LinearLayout>